	</options>
	
	<fields>
		<field>
			<label>Image :</label>
			<type>file</type>
			<value></value>
		</field>
	</fields>
	
	<actions>
		<action>
			<label>Ajouter une carte indice</label>
			<script>addCardIndice();</script>
		</action>

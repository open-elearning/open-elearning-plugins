		<id>CircleScore</id>
		<title>Circle Score</title>
		<category>Content</category>
	</properties>
	
	<embeddedFiles>
		<file>circlescore.css</file>
	</embeddedFiles>
	
	<display>
		<screenImage>screencirclescore.png</screenImage>
		<defaultText></defaultText>
		<width>150</width>
		<height>150</height>
